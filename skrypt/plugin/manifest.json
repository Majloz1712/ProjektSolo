{
  "manifest_version": 3,
  "name": "Sonda – Screenshot Plugin",
  "version": "1.1.0",
  "description": "Plugin do wykonywania screenshotów problematycznych stron i uzupełniania cen.",
  "permissions": [
    "tabs",
    "alarms",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Sonda Screenshot"
  }
}

